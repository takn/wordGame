<?xml version="1.0" encoding="utf-8"?>


<ramirez.nelson.wordgame.presentation.views.InfoPanel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:visibility="visible"
    tools:showIn="@layout/activity_word_game_main">

    <TextView
        style="@style/primaryTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select game" />

    <LinearLayout
        android:id="@+id/games_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" />
</ramirez.nelson.wordgame.presentation.views.InfoPanel>